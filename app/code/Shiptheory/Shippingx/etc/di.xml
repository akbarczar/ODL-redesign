<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <preference for="Shiptheory\Shippingx\Api\ApiInterface"
                type="Shiptheory\Shippingx\Model\Api" />

    <preference for="Shiptheory\Shippingx\Api\ShipmentUserRepositoryInterface"
                type="Shiptheory\Shippingx\Model\ShipmentUserRepository" />

    <preference for="Shiptheory\Shippingx\Api\Data\ShipmentUserInterface"
                type="Shiptheory\Shippingx\Model\ShipmentUser" />

    <preference for="Shiptheory\Shippingx\Api\UserRepositoryInterface"
                type="Shiptheory\Shippingx\Model\Api\UserRepository" />

    <type name="Magento\Sales\Api\ShipmentRepositoryInterface">
        <plugin name="shiptheory_shipment_user"
                type="Shiptheory\Shippingx\Plugin\AddShipmentUser"/>
    </type>
    <type name="Shiptheory\Shippingx\Model\ShipmentHistory">
        <plugin name="shipment_history_user"
                type="Shiptheory\Shippingx\Plugin\ShipmentHistoryUser"/>
    </type>
</config>
