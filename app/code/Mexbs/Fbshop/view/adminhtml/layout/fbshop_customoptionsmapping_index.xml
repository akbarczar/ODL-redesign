<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Mexbs\Fbshop\Block\Adminhtml\CustomOptionsMapping\Grid\Container" name="adminhtml.block.fbshop.grid.container">
                <block class="Magento\Backend\Block\Widget\Grid" name="adminhtml.block.fbshop.grid" as="grid">
                    <arguments>
                        <argument name="id" xsi:type="string">fbshop_grid</argument>
                        <argument name="dataSource" xsi:type="object">Mexbs\Fbshop\Model\ResourceModel\CustomOptionsMapping\Collection</argument>
                        <argument name="default_sort" xsi:type="string">sort_order</argument>
                        <argument name="default_dir" xsi:type="string">ASC</argument>
                        <argument name="save_parameters_in_session" xsi:type="string">1</argument>
                    </arguments>
                    <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" as="grid.columnSet" name="adminhtml.fbshop.grid.columnSet">
                        <arguments>
                            <argument name="rowUrl" xsi:type="array">
                                <item name="path" xsi:type="string">fbshop/customoptionsmapping/edit</item>
                                <item name="extraParamsTemplate" xsi:type="array">
                                    <item name="id" xsi:type="string">getMappingId</item>
                                </item>
                            </argument>
                        </arguments>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="mapping_id">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">ID</argument>
                                <argument name="index" xsi:type="string">mapping_id</argument>
                                <argument name="filter_index" xsi:type="string">main_table.mapping_id</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="fb_api_field_name">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Facebook API Field Name</argument>
                                <argument name="index" xsi:type="string">fb_api_field_name</argument>
                                <argument name="filter_index" xsi:type="string">main_table.fb_api_field_name</argument>
                                <argument name="type" xsi:type="string">options</argument>
                                <argument name="options" xsi:type="options" model="Mexbs\Fbshop\Model\Mapping\Source\VariationsFbField"/>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="custom_option_title">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Custom Options Title</argument>
                                <argument name="index" xsi:type="string">custom_option_title</argument>
                                <argument name="filter_index" xsi:type="string">main_table.attribute_code</argument>
                                <argument name="type" xsi:type="string">options</argument>
                                <argument name="options" xsi:type="options" model="Mexbs\Fbshop\Model\Mapping\Source\ProductCustomOptionTitle"/>
                            </arguments>
                        </block>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Massaction" name="adminhtml.block.fbshop.massactions"  as="grid.massaction">
                        <arguments>
                            <argument name="massaction_id_field" xsi:type="string">mapping_id</argument>
                            <argument name="form_field_name" xsi:type="string">mapping_id</argument>
                            <argument name="use_select_all" xsi:type="string">1</argument>
                            <argument name="options" xsi:type="array">
                                <item name="delete" xsi:type="array">
                                    <item name="label" xsi:type="string" translate="true">Delete</item>
                                    <item name="url" xsi:type="string">*/*/massDelete</item>
                                    <item name="confirm" xsi:type="string" translate="true">Are you sure that you want to delete the selected items?</item>
                                </item>
                            </argument>
                        </arguments>
                    </block>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
