<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="style-src">
            <values>
                <value id="cdnjs" type="host">https://cdnjs.cloudflare.com</value>
                <value id="onlinewebfonts" type="host">https://db.onlinewebfonts.com</value>
                <value id="fontawesome" type="host">https://cdnjs.cloudflare.com/ajax/libs/font-awesome</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="gstatic" type="host">https://fonts.gstatic.com</value>
                <value id="onlinewebfonts" type="host">https://db.onlinewebfonts.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
