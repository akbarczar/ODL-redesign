<script>
require([
    'jquery',
    'owlcarousel'
], function($){
    $(document).ready(function(){
        console.log("slider initiated");
        $('.main-slider.owl-carousel').owlCarousel({
            loop:true,
            margin:10,
            nav:true,
            dots:true,
            autoplay:true,
            autoplayTimeout:4000,
            autoplayHoverPause:true,
            responsive:{
                0:{
                    items:1
                },
                768:{
                    items:1
                },
                1024:{
                    items:1
                }
            }
        });
        $('.product-items.feature.products.owl-carousel').owlCarousel({
            loop:true,
            margin:10,
            nav:true,
            dots:true,
            autoplay:true,
            autoplayTimeout:4000,
            autoplayHoverPause:true,
            responsive:{
                0:{
                    items:2
                },
                768:{
                    items:4
                },
                1024:{
                    items:6
                }
            }
        });
    });
});
</script>
